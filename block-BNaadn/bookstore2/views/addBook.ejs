<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <div class="container">
        <div class="header">
          <a href="/" class="title btn"><h2>Bookstore</h2></a>
          <a href="/books" class="btn_add btn">back</a>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="form">
        <h2>Add Book</h2>
        <form action="/books/new" method="POST">
          <input
            class="input_handle"
            type="text"
            name="title"
            placeholder="Add title"
          />
          <select name="author" class="input_handle">
            <option value="demo" disabled>Select author</option>
            <% authors.forEach(author=>{ %>
            <option value="<%=author._id%>"><%= author.name %></option>
            <% }) %>
          </select>
          <textarea
            class="input_handle"
            type="text"
            rows="4"
            name="summary"
            placeholder="Add summary"
          ></textarea>
          <input
            class="input_handle"
            type="number"
            name="pages"
            placeholder="Add Pages"
          />
          <input
            class="input_handle"
            type="text"
            name="publication"
            placeholder="Add Publication"
          />
          <input
            class="input_handle"
            type="text"
            name="cover_image"
            placeholder="Add cover_image"
          />
          <select class="input_handle" name="category" id="cars">
            <option value="fiction">Fiction</option>
            <option value="adventure">Adventure</option>
            <option value="technology">Technology</option>
            <option value="motivation">Motivation</option>
          </select>
          <input class="input_handle btn_sub" type="submit" value="Add Book" />
        </form>
      </div>
    </div>
  </body>
</html>
