<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <div class="header">
        <a href="/" class="title"><h2>Bookstore</h2></a>
        <a href="/books/new" class="btn-store">Add Book</a>
      </div>
    </header>
    <div class="container">
      <h2 class="list_header">Listing Books</h2>
      <% books.forEach(book => { %>
      <section class="list">
        <h2 class="list_title"><%= book.title %></h2>
        <p class="list_text"><%= book.description.substr(0,200) + "..." %></p>
        <a href="/books/<%= book._id %>">
          <button class="btn-show">Show</button>
        </a>
      </section>
      <% }) %>
    </div>
  </body>
</html>
